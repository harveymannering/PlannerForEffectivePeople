<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlannerFragment"
    android:orientation="vertical"
    android:id="@+id/linear">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">

        <TableLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/plannerTable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:background="#FFFFFF">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/back_borderless">
                <TextView
                    android:id="@+id/dateLabel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="7"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/back">

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day1label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date1label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day2label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date2label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day3label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:paddingBottom="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date3label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day4label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date4label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day5label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date5label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day6label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date6label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>

                <LinearLayout
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/day7label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingVertical="10dip"
                        android:text="@string/mon"
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:singleLine="true"
                        android:textSize="14dp" />
                    <TextView
                        android:id="@+id/date7label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="10dip"
                        android:text=""
                        android:textColor="#000"
                        android:textAlignment="center"
                        android:textSize="14dp"
                        android:visibility="gone"/>
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/back_borderless">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="7"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="@string/priorities"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="7"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text=" "
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/back_borderless">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="7"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text="@string/appointments"
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="7"
                    android:layout_gravity="center_horizontal"
                    android:padding="10dip"
                    android:text=" "
                    android:textColor="#000"
                    android:textSize="14dp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:src="@drawable/ic_add"
        android:layout_margin="16dp"
        app:backgroundTint="@color/colorAccent"
        android:tint="#fff"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>